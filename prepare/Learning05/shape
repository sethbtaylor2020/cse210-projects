using System;

public abstract class Shape
{
    // Field
    private string _color;

    // Constructor
    public Shape(string color)
    {
        _color = color;
    }

    // Getters and Setters
    public string GetColor()
    {
        return _color;
    }

    public void SetColor(string color)
    {
        _color = color;
    }

    // Abstract methods
    public abstract double GetArea();
    public abstract string GetShapeType();
}
